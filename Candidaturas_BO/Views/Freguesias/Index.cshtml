@model IEnumerable<Candidaturas_BO.Models.Freguesia>

@{
    ViewBag.Title = "Freguesias";
}

<h2>Lista de Freguesias</h2>

<p class="BoParag">
    @Html.ActionLink("Criar Nova Freguesia", "Create") | @Html.ActionLink("Inserção em Massa", "MassInsert")
</p>

@using (Html.BeginForm())
{
<div class="FilterDiv">
    Procurar por concelho: @Html.DropDownList("concelho", ViewBag.Concelho as SelectList, "Escolha um concelho...", new { @class = "form-control" })
    <input type="submit" value="Procurar" class="btn btn-default" />
</div>
}

<div class="TotalDiv">
    Total de Freguesias: @ViewBag.TotalFreguesias
</div>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink(HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.Nome).ToHtmlString()), "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink(HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.Codigo).ToHtmlString()), "Index", new { sortOrder = ViewBag.CodeSortParm })
        </th>
        <th>
            @Html.ActionLink(HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.CodigoConcelho).ToHtmlString()), "Index", new { sortOrder = ViewBag.ConcelhoSortParm })
        </th>
        <th>
            @Html.ActionLink(HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.CodigoDistrito).ToHtmlString()), "Index", new { sortOrder = ViewBag.DistritoSortParm })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoConcelho)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoDistrito)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Apagar", "Delete", new { id = item.ID })
        </td>
    </tr>
    }

</table>
