@model PagedList.IPagedList<Candidaturas_BO.Models.Localidade>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Localidades";
}

<h2>Lista de Localidades</h2>
@if (ViewBag.UserAdmin)
{
    <p class="BoParag">
        @Html.ActionLink("Criar Nova Localidade", "Create") | @Html.ActionLink("Inserção em Massa", "MassInsert")
    </p>
}
    @using (Html.BeginForm())
    {
    <div class="FilterDiv">
        Procurar por nome: @Html.TextBox("SearchString", null, new { @style = "margin-right:5px" })
        <input type="submit" value="Procurar" class="btn btn-default" />
    </div>
    }

    <div class="TotalDiv">
        Total de Localidades: @ViewBag.TotalLocalidades
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Nome", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Código", "Index", new { sortOrder = ViewBag.CodeSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Código Concelho", "Index", new { sortOrder = ViewBag.ConcelhoSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Código Distrito", "Index", new { sortOrder = ViewBag.DistritoSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoConcelho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoDistrito)
            </td>
            @if (ViewBag.UserAdmin)
            {
                <td>
                    @Html.ActionLink("Editar", "Edit", new { codigo = item.Codigo, codigoConcelho = item.CodigoConcelho, codigoDistrito = item.CodigoDistrito }) |
                    @Html.ActionLink("Apagar", "Delete", new { codigo = item.Codigo, codigoConcelho = item.CodigoConcelho, codigoDistrito = item.CodigoDistrito })
                </td>
            }
        </tr>
        }

    </table>
    <br />
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))