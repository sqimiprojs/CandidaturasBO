@model IEnumerable<Candidaturas_BO.Models.Concelho>

@{
    ViewBag.Title = "Concelhos";
}

<h2>Lista de Concelhos</h2>

<p class="BoParag">
    @Html.ActionLink("Criar Novo Concelho", "Create") | @Html.ActionLink("Inserção em Massa", "MassInsert")
</p>

@using (Html.BeginForm())
{
<div class="FilterDiv">
    Procurar por distrito: @Html.DropDownList("distrito", ViewBag.Distrito as SelectList, "Escolha um distrito...", new { @class = "form-control" })
    <input type="submit" value="Procurar" class="btn btn-default" />
</div>
}

<div class="TotalDiv">
    Total de Concelhos: @ViewBag.TotalConcelhos
</div>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink(HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.Nome).ToHtmlString()), "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Código", "Index", new { sortOrder = ViewBag.CodeSortParm })
        </th>
        <th>
            @Html.ActionLink("Código Distrito", "Index", new { sortOrder = ViewBag.DistritoSortParm })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.ActionLink(item.Nome, "Index", "Freguesias", new { concelho = item.Nome }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoDistrito)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Apagar", "Delete", new { id = item.ID })
        </td>
    </tr>
    }

</table>
